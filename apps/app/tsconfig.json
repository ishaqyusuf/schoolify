{
  "extends": "@turbocharger/ts-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
      // ALL TEMPLATES HERE
      // "@folio/*": ["app/[domain]/folio/(template)/*"],
      // "@quantum/*": ["app/[domain]/quantum/(template)/*"],
      // "@chroma/*": ["app/[domain]/chroma/(template)/*"],
      // "@clarity/*": ["app/[domain]/clarity/(template)/*"],
      // "@doction/*": ["app/[domain]/doction/(template)/*"],
      // "@horizon/*": ["app/[domain]/horizon/(template)/*"],
      // "@minimalist/*": ["app/[domain]/minimalist/(template)/*"],
      // "@nova/*": ["app/[domain]/nova/(template)/*"],
      // "@pulse/*": ["app/[domain]/pulse/(template)/*"]
    },
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
